{
    "name": "tempo/tempo",
    "type":        "project",
    "description": "Modern Social hub Software",
    "homepage": "http://tempo-project.com",
    "license":     "MIT",
    "authors": [
        {
            "name":     "Mlanawo Mbechezi",
            "homepage": "http://mlanawo.mbechezi.com"
        },
        {
            "name":     "Ikimea",
            "homepage": "http://ikimea.com"
        },
        {
            "name":     "Community contributions",
            "homepage": "http://github.com/tempo-project/Tempo/contributors"
        }
    ],
    "require": {
        "php": ">=5.4.8",
        "symfony/symfony": "~2.6",
        "doctrine/orm": "~2.5-dev",
        "doctrine/common": "~2.5-dev",
        "doctrine/doctrine-migrations-bundle": "2.1.*@dev",
        "doctrine/migrations": "~1.0@dev",
        "symfony/assetic-bundle": "~2.6",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.6",
        "sensio/distribution-bundle": "~3.0",
        "sensio/framework-extra-bundle": "~3.0",
        "sensio/generator-bundle": "~2.5",
        "incenteev/composer-parameter-handler": "~2.0",
        "twig/extensions": "~1.2",

        "friendsofsymfony/rest-bundle": "~1.5",
        "friendsofsymfony/jsrouting-bundle": "~1.5",
        "hwi/oauth-bundle": "~0.3",
        "jms/serializer-bundle": "~0.13",
        "wisembly/elephant.io": "~3.0",
        "ikimea/browser": "~1.11",
        "yohang/calendr": "~1.0",
        "knplabs/knp-menu-bundle": "~2.0",
        "knplabs/knp-snappy-bundle": "~1.2",
        "stof/doctrine-extensions-bundle": "~1.1",
        "white-october/pagerfanta-bundle": "~1.0",
        "liip/imagine-bundle": "~1.1",
        "nelmio/api-doc-bundle": "~2.7",
        "willdurand/js-translation-bundle": "~2.1",
        "sylius/settings-bundle": "~0.13",
        "sylius/resource-bundle": "~0.13",
        "sylius/translation-bundle": "~0.13",
        "phpoffice/phpexcel": "~1.8"
   },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "behat/behat": "~3.0",
        "behat/symfony2-extension":      "~2.0",
        "behat/mink-extension":          "~2.0",
        "behat/mink-browserkit-driver":  "~1.2",
        "behat/mink-selenium2-driver": "~1.2",
        "behat/mink-goutte-driver": "~1.1",
        "willdurand/faker-bundle": "~1.2",
        "doctrine/doctrine-fixtures-bundle": "dev-master",
        "doctrine/data-fixtures": "dev-master"
    },
    "replace": {
        "tempo-project/resource": "self.version",
        "tempo-project/jsconfiguration-bundle": "self.version"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "autoload": {
        "psr-4":         {
            "Tempo\\": "src/Tempo"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4.x-dev"
        },
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
