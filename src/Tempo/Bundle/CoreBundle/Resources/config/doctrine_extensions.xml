<?xml version="1.0" encoding="utf-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tempo.eventlistener.doctrine_extensions.logger.class">Tempo\Bundle\CoreBundle\EventListener\LoggerListener</parameter>
        <parameter key="tempo.listener.loggable.logger.class">Tempo\Bundle\CoreBundle\EventListener\LoggerListener</parameter>
    </parameters>

    <services>

        <service id="tempo.listener.loggable" class="%tempo.listener.loggable.logger.class%">
            <call method="setAnnotationReader">
                <argument type="service" id="annotation_reader" />
            </call>
        </service>

    </services>
</container>
