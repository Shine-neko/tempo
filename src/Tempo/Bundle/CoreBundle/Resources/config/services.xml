<?xml version="1.0" encoding="utf-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tempo.core.eventlistener.class">Tempo\Bundle\CoreBundle\EventListener\ControllerListener</parameter>
        <parameter key="tempo.core.twig.extension.class">Tempo\Bundle\CoreBundle\Twig\Extension\CoreExtension</parameter>
        <parameter key="tempo.core.elephantio.client.class">Tempo\Bundle\CoreBundle\ElephantIO\Client</parameter>
        <parameter key="tempo.form.type.autocomplete.class">Tempo\Bundle\CoreBundle\Form\Type\AutocompleteType</parameter>
        <parameter key="tempo.form.type.datetimepicker.class">Tempo\Bundle\CoreBundle\Form\Type\DateTimePickerType</parameter>
        <parameter key="tempo.form.type.list.class">Tempo\Bundle\CoreBundle\Form\Type\ListType</parameter>
    </parameters>

    <services>

        <service id="tempo.core.entity_manager" factory-service="doctrine" factory-method="getManager" class="Doctrine\ORM\EntityManager" public="false" />

        <service id="tempo.core.listener.controller" class="%tempo.core.eventlistener.class%">
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController"/>
        </service>

        <service id="tempo.core.elephantio.definition" class="ElephantIO\Client" public="false" >
            <argument type="string">http://%socket_io.client%</argument>
        </service>
        <service id="tempo.core.elephantio.client" class="%tempo.core.elephantio.client.class%">
            <argument type="service" id="tempo.core.elephantio.definition" />
        </service>

        <service id="tempo.core.twig.extension" class="%tempo.core.twig.extension.class%" >
            <tag name="twig.extension" />
        </service>

        <service id="tempo.form.type.autocomplete" class="%tempo.form.type.autocomplete.class%">
            <argument type="service" id="tempo.main.behavior" />
            <tag name="form.type" alias="autocomplete" />
        </service>

        <service id="tempo.form.type.datetimepicker" class="%tempo.form.type.datetimepicker.class%">
            <tag name="form.type" alias="datetimepicker" />
        </service>

        <service id="tempo.form.type.list" class="%tempo.form.type.list.class%">
            <tag name="form.type" alias="list" />
        </service>

    </services>
</container>
