<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tempo.security.login_manager.class">Tempo\AppBundle\EventListener\LastLoginListener</parameter>
        <parameter key="tempo.security.access.voter.organization.class">Tempo\Bundle\AppBundle\Security\Authorization\Voter\OrganizationVoter</parameter>
        <parameter key="tempo.security.access.voter.project.class">Tempo\Bundle\AppBundle\Security\Authorization\Voter\ProjectVoter</parameter>
        <parameter key="tempo.security.access.voter.room.class">Tempo\Bundle\AppBundle\Security\Authorization\Voter\RoomVoter</parameter>
    </parameters>

    <services>
        <service id="tempo.security.access.voter.project" class="%tempo.security.access.voter.project.class%">
            <tag name="security.voter" />
        </service>

        <service id="tempo.security.access.voter.organization" class="%tempo.security.access.voter.organization.class%">
            <tag name="security.voter" />
        </service>

        <service id="tempo.security.access.voter.room" class="%tempo.security.access.voter.room.class%">
            <tag name="security.voter" />
        </service>

        <service id="tempo.security.login_manager" class="%tempo.security.login_manager.class%">
            <argument type="expression">service('security.token_storage').getToken().getUser()</argument>
            <argument type="service" id="security.user_checker" />
            <argument type="service" id="security.authentication.session_strategy" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>