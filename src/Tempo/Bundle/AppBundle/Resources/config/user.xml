<?xml version="1.0" encoding="utf-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="tempo.user.profile.form.type.avatar.class">Tempo\Bundle\AppBundle\Form\Type\AvatarType</parameter>
        <parameter key="tempo.user.profile.form.handler.avatar.class">Tempo\Bundle\AppBundle\Form\Handler\AvatarHandler</parameter>
        <parameter key="tempo.user.user_provider.username.class">Tempo\Bundle\AppBundle\Security\UserProvider</parameter>
        <parameter key="tempo.user.oauth.user_provider.class">Tempo\Bundle\AppBundle\OAuth\UserProvider</parameter>
        <parameter key="tempo.user.security.interactive_login_listener.class">Tempo\Bundle\AppBundle\EventListener\UserListener</parameter>
        <parameter key="tempo.user.security.api_token_authenticator.class">Tempo\Bundle\AppBundle\Security\TokenAuthenticator</parameter>
        <parameter key="tempo.user.twig.extension.class">Tempo\Bundle\AppBundle\Twig\Extension\UserExtension</parameter>
    </parameters>

    <services>
        <service id="tempo.user.user_provider.username" class="%tempo.user.user_provider.username.class%">
            <argument type="service" id="tempo.model_manager.user" />
        </service>

        <service id="tempo.user.oauth.user_provider" class="%tempo.user.oauth.user_provider.class%">
            <argument type="service" id="tempo.model_manager.user" />
            <argument type="collection">
            <argument key="google">googleId</argument>
            <argument key="github">githubId</argument>
            </argument>
        </service>

        <service id="tempo.user.profil.tabs" class="Knp\Menu\MenuItem">
            <factory service="tempo.menu.builder.frontend" method="userProfile" />
            <tag name="knp_menu.menu" alias="profile_tab"/>
        </service>

        <service id="tempo.user.profile.form.type.avatar" class="%tempo.user.profile.form.type.avatar.class%">
            <argument type="string">%tempo.user.profile.form.type.avatar.class%</argument>
        </service>

        <service id="tempo.user.profile.form.avatar.factory" class="Symfony\Component\Form\Form">
            <factory service="form.factory" method="create" />
            <argument type="service" id="tempo.user.profile.form.type.avatar"></argument>
        </service>

        <service id="tempo.user.profile.handler.avatar" class="%tempo.user.profile.form.handler.avatar.class%" scope="request">
            <argument type="service" id="request"/>
            <argument type="service" id="tempo.user.profile.form.avatar.factory"/>
            <argument type="service" id="tempo.domain_manager"/>
            <call method="setPath">
                <argument type="string">%tempo.upload_dir%</argument>
            </call>
        </service>

        <service id="tempo.user.user_listener" class="%tempo.user.security.interactive_login_listener.class%">
            <argument type="service" id="security.encoder_factory" />
            <tag name="kernel.event_listener" event="tempo.user.pre_create" method="preCreate" />
            <tag name="kernel.event_listener" event="tempo.user.pre_update" method="preUpdate" />
            <tag name="kernel.event_listener" event="security.interactive_login" method="setLocaleForAuthenticatedUser" />
            <tag name="kernel.event_listener" event="kernel.request" method="setLocale" priority="17"  />
        </service>

        <service id="tempo.user.security.api_token_authenticator" class="%tempo.user.security.api_token_authenticator.class%">
            <argument type="service" id="security.http_utils" />
            <argument type="service" id="tempo.user.user_provider.username" />
        </service>

        <service id="tempo.user.twig.extension" class="%tempo.user.twig.extension.class%">
            <argument type="service" id="router" />
            <argument type="service" id="translator" />
            <argument type="service" id="tempo.model_manager.notification" />
            <argument type="service" id="liip_imagine.cache.manager" />
            <tag name="twig.extension" />
        </service>

    </services>
</container>
