{% extends "TempoAppBundle:Security:login.html.twig" %}

{% block subcontent %}
    <form action="{{ path("user_resetting_reset") }}" method="post">
        <div class="widget username">
            <input type="text" id="username" name="username" class="form-control" required="required" placeholder="{{ 'tempo.security.resetting.username'|trans }}" />
        </div>

        <div class="widget already_login col-md-6">
            <a href="{{ path('user_login') }}"> {{ 'tempo.security.resetting.already_login'|trans }} </a>
        </div>

        <div class="widget send col-md-6">
            <input id="login" class="submit btn btn-default" type="submit" value="{{ 'tempo.form.submit'|trans }}"/>
        </div>
    </form>
{% endblock subcontent %}
