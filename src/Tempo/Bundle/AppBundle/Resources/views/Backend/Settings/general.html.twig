{% extends "TempoAppBundle::layout.html.twig" %}

{% block container %}
    {% block breadcrumb %}
        <ol id="breadcrumb" class="clearfix">
            <li class="first"> <a href="{{ path('dashboard') }}">{{ 'tempo.menu.home'|trans  }}</a> </li>
            <li> <a href="{{ path('backend') }}">{{ 'tempo.menu.admin'|trans  }}</a> </li>
            <li class="last"> Dashboard </li>
        </ol>
    {% endblock breadcrumb %}

    <div class="col-md-2">
        {{ knp_menu_render('admin_settings') }}
    </div>
    <div class="col-md-8">
        <div class="app-panel">
            {{ form_errors(form) }}

            <form class="form-block" method="post" action="{{ path('admin_configuration_general') }}">
                <div id="settings">
                    {{ form_widget(form) }}
                    {{ form_rest(form) }}
                </div>
            </form>
        </div>
    </div>


{% endblock %}