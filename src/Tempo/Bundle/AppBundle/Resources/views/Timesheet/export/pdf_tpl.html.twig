<style>
    table thead tr th {
        background: #005782;
        color: #fff;
        padding: 5px;
    }
    table tbody tr td {
        padding: 5px;
    }

</style>
<table>
    <thead>
        <tr>
            <th>{{ 'tempo.timesheets.export.id'|trans }}</th>
            <th>{{ 'tempo.timesheets.export.date'|trans }}</th>
            <th>{{ 'tempo.timesheets.export.status'|trans }}</th>
            <th>{{ 'tempo.timesheets.export.action'|trans }}</th>
            <th>{{ 'tempo.timesheets.export.period'|trans }}</th>
            <th>{{ 'tempo.timesheets.export.cost'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for item in list %}
        <tr>
            <td>{{ item.id }}</td>
            <td>{{ item.period|date("m/d/Y") }}</td>
            <td>{{ item.billable|date("m/d/Y")  }}</td>
            <td>{{ item.description }}</td>
            <td style="text-align: center">{{ item.time }}H</td>
            <td></td>
        </tr>
        {% endfor %}
    </tbody>
</table>