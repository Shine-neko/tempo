{% extends "TempoAppBundle::layout.html.twig" %}

{% block bodyClass %}user profile password{% endblock %}

{% block container %}

    {% block breadcrumb %}
        <ol id="breadcrumb" class="clearfix">
            <li class="first"> <a href="{{ path('dashboard') }}">{{ 'tempo.menu.home'|trans }}</a> </li>
            <li > <a href="{{ path('user_profile_edit') }}">Profile</a> </li>
            <li class="last"> Edit password </li>
        </ol>
    {% endblock breadcrumb %}


    <div class="container-panel">
        {% include "TempoAppBundle:Profile:_tabs.html.twig" %}

        <div class="col-md-8 app-panel">
            <h1 id="page-title" style="font-size: 22px;">Change password</h1>

            <form action="{{ path('user_profile_password') }}" method="POST">
                <div class="clearbox">
                    {{ form_widget(form) }}
                </div>
                <div class="form-rest">
                    <input type="submit" value="{{ 'tempo.form.update'|trans }}"  class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
{% endblock container %}
