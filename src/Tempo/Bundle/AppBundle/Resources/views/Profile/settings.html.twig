{% extends "TempoAppBundle::layout.html.twig" %}

{% block bodyClass %}user profile settings{% endblock %}

{% block container %}

    {% block breadcrumb %}
        <ol id="breadcrumb" class="clearfix">
            <li class="first"> <a href="{{ path('project_home') }}">Accueil</a> </li>
            <li> <a href="{{ path('user_profile_edit') }}">Profile</a> </li>
            <li class="last"> Setting </li>
        </ol>
    {% endblock breadcrumb %}

    <div class="container-panel">

        <div class="col-md-3 app-panel tab-nav">
            {% include "TempoAppBundle:Profile:_tabs.html.twig" %}
        </div>
        <div class="col-md-8 app-panel">
            <h1 id="page-title">Setting</h1>
            <div class="form-block clearbox">
                {{ form_widget(form) }}

                <div class="form-rest">
                    <input type="submit" class="btn btn-primary">
                </div>
            </div>

            <form  action="{{ path('user_profile_token') }}" method="POST" class="user_profile_edit">

                <div class="col-md-8">
                    <fieldset>
                        <div class="form-group">
                            <label for="setting_lang" class=" control-label col-sm-3 required">Token </label>
                            <div class="col-sm-9">
                                <input style="float: left" type="text" value="{{ profile.token }}" class="form-control" />
                            </div>
                        </div>
                    </fieldset>

                </div>
                <div class="col-md-2"><input type="submit" value="Generate token" class="btn btn-primary" /></div>
                <div class="clearbox"></div>
            </form>
        </div>


    </div>


{% endblock %}
