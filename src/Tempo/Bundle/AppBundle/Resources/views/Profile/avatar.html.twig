{% extends "TempoAppBundle::layout.html.twig" %}
{% block bodyClass %}user profile avatar{% endblock %}

{% block container %}

        {% block breadcrumb %}
        <ol id="breadcrumb" class="clearfix">
            <li class="first"> <a href="{{ path('homepage') }}">{{ 'tempo.menu.home'|trans }}</a> </li>
            <li> <a href="{{ path('user_profile_edit') }}">{{ 'tempo.profile.title'|trans }}</a> </li>
            <li class="last">{{ 'tempo.profile.avatar.title'|trans }}</li>
        </ol>
    {% endblock breadcrumb %}

<div class="container-panel">
    {% include "TempoAppBundle:Profile:_tabs.html.twig" %}

    <div class="app-panel col-md-8">
        <h1 class="page-title" style="font-size: 22px;">{{ 'tempo.avatar.admin_change'|trans }} {{ user.getUsername() }} </h1>

        <form action="{{ path('user_profile_avatar') }}" method="post" class="form-horizontal" enctype="multipart/form-data">
            {{ form_errors(form) }}

            <div class="form-block clearbox">

                <div class="control-group">
                    <div class="controls">
                        <div class="avatar col-md-2">
                            <img src="{{ avatar(user.avatar, 100) }}" alt="{{ 'tempo.avatar.actual_avatar'|trans }}" />
                        </div>
                        <div class="col-md-6">
                            <p>
                                {{ 'tempo.avatar.avatar_info'|trans }}
                            </p>
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        {{ form_widget(form) }}
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <input type="submit" class="btn btn-primary" name="submit" value="{{ 'tempo.avatar.submit'|trans }}" />
            </div>
        </form>
    </div>

</div>
{% endblock %}
