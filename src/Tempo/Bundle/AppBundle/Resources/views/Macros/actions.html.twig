{% macro create(url) %}
<div class="form-actions">
    <button type="submit" class="btn btn-primary"><i class="icon-ok"></i> {{ 'tempo.form.create'|trans }}</button>
    <a href="{{ app.request.headers.get('referer', url) }}" class="btn btn-danger"><i class="icon-remove"></i> {{ 'tempo.form.cancel'|trans }}</a>
</div>
{% endmacro %}

{% macro update(url) %}
<div class="form-actions">
    <button type="submit" class="btn btn-primary btn-inverse"><i class="icon-save"></i> {{ 'tempo.form.save_changes'|trans }}</button>
    <a href="{{ app.request.headers.get('referer', url) }}" class="btn btn-danger"><i class="icon-remove"></i> {{ 'tempo.form.cancel'|trans }}</a>
</div>
{% endmacro %}

{% macro pagination(paginator, options) %}
    {% if paginator.haveToPaginate()|default(false) %}
        <div class="row">
            <div class="col-xs-9">
                {{ pagerfanta(paginator, 'twitter_bootstrap3_translated', options|default({})) }}
            </div>

            <div class="col-xs-3">
                <div class="pull-right">
                    <div class="btn-group paginator">
                        {{ sylius_resource_paginate(paginator, [10,20,30]) }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endmacro %}
