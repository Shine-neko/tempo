{% extends "TempoAppBundle::layout.html.twig" %}
{% block bodyClass %}project edit{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@TempoAppBundle/Resources/assets/js/views/projectView.js'
        output="js/project-update.js"
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>new Tempo.View.Project(); </script>
{% endblock %}

{% block container %}
    {% block breadcrumb %}
        <ol id="breadcrumb" class="clearfix">
            <li class="first"> <a href="{{ path('homepage') }}">{{ 'tempo.menu.home'|trans  }}</a> </li>
            <li> <a href="{{ path('project_dashboard') }}">{{ 'tempo.project.title'|trans }}</a> </li>
            <li> <a href="{{ path('project_show', { 'slug': project.slug }) }}">{{ project.name }}</a> </li>
            <li class="last">{{ 'tempo.project.edit'|trans }}</li>
        </ol>
    {% endblock breadcrumb %}
    <h1 id="page-title">{{ project.name }}</h1>

    <form action="{{ path('project_update', { 'slug': project.slug }) }}" method="post">
        {% include 'TempoAppBundle::Project/_form.html.twig' with { 'form' : form } %}

        <div class="clearbox form_rest">
            <button type="submit" class="btn btn-primary">{{ 'tempo.form.save_changes'|trans }}</button>
        </div>
    </form>
{% endblock %}
