<?xml version="1.0" encoding="utf-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="tempo.manager.activity_provider.class">Tempo\Bundle\ActivityBundle\Manager\ActivityProviderManager</parameter>
        <parameter key="tempo.manager.activity.class">Tempo\Bundle\ActivityBundle\Manager\ActivityManager</parameter>
        <parameter key="tempo.model.activity.class">Tempo\Bundle\ActivityBundle\Entity\Activity</parameter>
        <parameter key="tempo.model.activity_provider.class">Tempo\Bundle\ActivityBundle\Entity\ActivityProvider</parameter>
        <parameter key="tempo.activity.listener.activity_provider.class">Tempo\Bundle\ActivityBundle\EventListener\ActivityProviderListener</parameter>
    </parameters>
    <services>
        <service id="tempo.manager.activity_provider" class="%tempo.manager.activity_provider.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument>%tempo.model.activity_provider.class%</argument>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="tempo.manager.activity" class="%tempo.manager.activity.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument>%tempo.model.activity.class%</argument>
            <call method="setSecurityContext">
                <argument type="service" id="security.context" />
            </call>
        </service>

        <service id="tempo.activity.listener.activity_provider" class="%tempo.activity.listener.activity_provider.class%">
            <argument type="service" id="tempo.manager.room" />
            <argument type="service" id="jms_serializer" />
            <argument type="service" id="tempo.core.elephantio.client" />
            <tag name="kernel.event_listener" event="tempo.activity.provider.create.success" method="pingActivityRoom" />
        </service>

    </services>
</container>