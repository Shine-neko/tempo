{% extends "TempoMainBundle::Layout/web.html.twig" %}

{% block content %}
    <div class="col-md-3">
       <img src="{{ profile.avatar(220) }}" />
        <h1>{{ profile.firstName}}  {{ profile.lastName }}
            <small>{{ profile.username }}</small>
        </h1>
    </div>
    <div class="col-md-8">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#activity" data-toggle="tab">Activity</a></li>
            <li><a href="#profile" data-toggle="tab">...</a></li>
            <li><a href="#messages" data-toggle="tab">...</a></li>
            <li><a href="#settings" data-toggle="tab">...</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="activity">

            </div>
            <div class="tab-pane" id="profile">...</div>
            <div class="tab-pane" id="messages">...</div>
            <div class="tab-pane" id="settings">...</div>
        </div>

    </div>
{% endblock %}