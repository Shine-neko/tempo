{% extends "TempoMainBundle::Layout/web.html.twig" %}

{% block content %}
<div class="form-block">
   <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
        {{ form_errors(form) }}
       
       <fieldset>
           <div class="formtextField">{{ form_row(form.username) }}</div>
            <div class="formtextField">{{ form_row(form.email) }}</div>
       </fieldset>
       
       <fieldset>
        <div class="formtextField">{{ form_row(form.first_name) }}</div>
        <div class="formtextField">{{ form_row(form.last_name) }}</div>
       </fieldset>
       
       <fieldset>
        <div class="formtextField">{{ form_row(form.phone) }}</div>
        <div class="formtextField">{{ form_row(form.phone_mobile) }}</div>
       <fieldset> 
       
       <div>
            <input type="submit" value="Edit" />
        </div>
    </form>
</div>

{% endblock %}



{% block right %}
    <h3>Related Settings</h3>
    <div id="settings">
        <ul>
            <li>My profil</li>
            <li>Change Password</li>
            <li>Change Your photo</li>
        </ul>
    </div>
{% endblock %}
