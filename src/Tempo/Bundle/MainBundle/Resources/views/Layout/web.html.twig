{% set behavior = behavior() %}
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="{{ asset('vendor/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/tempomain/css/application.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/tempomain/css/bundles.css') }}" type="text/css" media="all" />
    {% block stylesheets %}{% endblock %}
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"  />
    {{ sonata_seo_title() }}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"  />
</head>

<body class="no-js {{get_browser()}} {% block bodyClass %}{% endblock %}">
