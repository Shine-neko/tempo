{% block content %}
<div class="col-md-3 hidden-sm hidden-xs side-filters">
    <fieldset>
      <ul class="nav nav-pills nav-stacked">
        <li class=" active">
          <a href="?scope=&amp;sort=">All
          </a>
        </li>
        <li class="">
            <a href="?scope=personal&amp;sort=">Personal</a>
        </li>
        <li class=""><a href="?scope=joined&amp;sort=">Joined
          </a>
        </li><li class=""><a href="?scope=owned&amp;sort=">Owned
          </a>
        </li>
      </ul>
    </fieldset>
</div>
<div class="col-md-9">

  <ul>

    {% for project in projects %}
    <li>
        <h4>
            <span class="ion-cube"></span>
          <a href="{{ path('project_show', { 'slug' : project.slug } ) }}">{{ project.name }}</a>
        </h4>
        <div class="last-activity">
            <span class="light">Last activity:</span>
            <span class="date"><time class="last_activity_time_ago" data-placement="bottom" data-toggle="tooltip" datetime="2013-09-04T21:23:55Z" >{{ project.lastActivity|localizeddate('medium', 'none', app.request.locale ) }}</time>
            </span>
        </div>
    </li>
    {% endfor %}
  </ul>
  </table>
</div>
{% endblock %}