{% extends "TempoMainBundle::Layout/web.html.twig" %}
{% block bodyClass %}project dashboard{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/tempoproject/js/client.js')}}"></script>
{% endblock %}
{% block content %}
    <div id="choose-client">
            <p class="first"> {{ 'select_client.first'|trans({},'TempoProject') }} <span> ⟶ </span> </p>
            <p class="second"> {{ 'select_client.second'|trans({},'TempoProject') }} </p>
    </div>
{% endblock %}

{% block right %}
    <div id="clients">
        <div class="head clearfix">
            <h4 >{{ 'client.list.title'|trans({},'TempoProject') }}</h4>
            <a href="{{ path('client_new') }}"  class="float-right btn btn-primary btn-xs" data-target="#" data-toggle="modal" data-title="Add new client" >{{ 'client.add' |trans({},'TempoProject') }}</a>
        </div>
        <ul class="list clear">
            {% for client in clients %}
                <li> <span>»</span>
                    <a href="{{ path('client_show', { 'slug' : client.slug } ) }}"> {{ client.name }} </a>
                    <a data-toggle="modal" href="{{ path('client_delete', { 'slug': client.slug }) }}"> x </a>
                </li>
            {% else %}
                <p>{% trans %} Aucun client n'a été trouvé. {% endtrans %}</p>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
