<?xml version="1.0" encoding="utf-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="tempo.project.tabProvidersRegistry.class">Tempo\Bundle\ProjectBundle\Tabs\TabProvidersRegistry</parameter>
        <parameter key="tempo.project.tab.project.class">Tempo\Bundle\ProjectBundle\Tabs\ProjectTab</parameter>
        <parameter key="tempo.project.tab.subproject.class">Tempo\Bundle\ProjectBundle\Tabs\SubProjectTab</parameter>
        <parameter key="tempo.project.tab.activity.class">Tempo\Bundle\ProjectBundle\Tabs\ActivityTab</parameter>
        <parameter key="tempo.project.tab.settings.class">Tempo\Bundle\ProjectBundle\Tabs\SettingsTab</parameter>
        <parameter key="tempo.manager.activity_provider.class">Tempo\Bundle\ProjectBundle\Manager\ActivityProviderManager</parameter>
        <parameter key="tempo.model.activity_provider.class">Tempo\Bundle\ProjectBundle\Entity\ActivityProvider</parameter>
        <parameter key="tempo.activity.listener.activity_provider.class">Tempo\Bundle\ProjectBundle\EventListener\ActivityProviderListener</parameter>
    </parameters>
    
    <services>
        <service id="tempo.project.tabProvidersRegistry" class="%tempo.project.tabProvidersRegistry.class%" />
        <service id="tempo.project.tab.project" class="%tempo.project.tab.project.class%">
            <tag name="tempo.project.show.tab" />
        </service>
        <service id="tempo.project.tab.subproject" class="%tempo.project.tab.subproject.class%">
            <tag name="tempo.project.show.tab" />
        </service>
        <service id="tempo.project.tab.activity" class="%tempo.project.tab.activity.class%">
            <tag name="tempo.project.show.tab" />
        </service>
        <service id="tempo.project.tab.settings" class="%tempo.project.tab.settings.class%">
            <tag name="tempo.project.show.tab" />
        </service>

        <service id="tempo.manager.activity_provider" class="%tempo.manager.activity_provider.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument>%tempo.model.activity_provider.class%</argument>

        </service>

        <service id="tempo.manager.activity" class="%tempo.manager.activity.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument>%tempo.model.activity.class%</argument>
        </service>

        <service id="tempo.activity.listener.activity_provider" class="%tempo.activity.listener.activity_provider.class%">
            <argument type="service" id="tempo.manager.room" />
            <argument type="service" id="jms_serializer" />
            <argument type="service" id="tempo.main.elephantio.client" />
            <tag name="kernel.event_listener" event="tempo.activity.provider.create.success" method="pingActivityRoom" />
        </service>
    </services>

</container>