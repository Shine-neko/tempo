<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tempo.model.organization.class">Tempo\Bundle\ProjectBundle\Entity\Organization</parameter>
        <parameter key="tempo.model.project.class">Tempo\Bundle\ProjectBundle\Entity\Project</parameter>
        <parameter key="tempo.model.timesheet.class">Tempo\Bundle\ProjectBundle\Entity\Timesheet</parameter>
        <parameter key="tempo.model.team.class">Tempo\Bundle\ProjectBundle\Model\Team</parameter>

        <parameter key="tempo.manager.organization.default.class">Tempo\Bundle\ProjectBundle\Manager\OrganizationManager</parameter>
        <parameter key="tempo.manager.project.default.class">Tempo\Bundle\ProjectBundle\Manager\ProjectManager</parameter>
        <parameter key="tempo.manager.timesheet.default.class">Tempo\Bundle\ProjectBundle\Manager\TimesheetManager</parameter>
        <parameter key="tempo.manager.team.default.class">Tempo\Bundle\ProjectBundle\Manager\TeamManager</parameter>
    </parameters>

    <services>

        <service id="tempo.manager.settings" class="%tempo.manager.timesheet.default.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%tempo.model.timesheet.class%</argument>
        </service>

        <service id="tempo.manager.organization" class="%tempo.manager.organization.default.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%tempo.model.organization.class%</argument>
        </service>

        <service id="tempo.manager.project" class="%tempo.manager.project.default.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%tempo.model.project.class%</argument>
        </service>

        <service id="tempo.manager.timesheet" class="%tempo.manager.timesheet.default.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%tempo.model.timesheet.class%</argument>
        </service>

        <service id="tempo.manager.team" class="%tempo.manager.team.default.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%tempo.model.team.class%</argument>
        </service>

    </services>

</container>
